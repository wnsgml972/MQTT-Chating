package kr.ac.hansung.panel;

import java.awt.Color;
import java.awt.Font;
import java.awt.Graphics;

import javax.swing.*;

class GroundPanel extends JPanel // 단어떨어지는 패널
{
	private static ChatPanel instance;
	
	private GroundPanel(){ 
		setLayout(null);
		setFocusable(false);
	}
	
	synchronized public static ChatPanel getInstance(){
		if(instance == null){
			instance = new ChatPanel();
		}
		return instance;
	}
	
	@Override
	public void paintComponent(Graphics g) // 한계선 설정
	{
		super.paintComponent(g);
		g.drawLine(0, getHeight() - 30, getWidth(), getHeight() - 30);
		g.setColor(Color.yellow);
		g.setFont(new Font("아이럽우유", Font.ITALIC, 25));
	}
}