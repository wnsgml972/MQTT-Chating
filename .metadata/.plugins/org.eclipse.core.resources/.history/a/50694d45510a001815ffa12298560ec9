package Server;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.IOException;
import java.io.InputStreamReader;
import java.io.OutputStream;
import java.io.OutputStreamWriter;
import java.net.ServerSocket;
import java.net.Socket;
import java.util.Collections;
import java.util.HashMap;
import java.util.Iterator;
import java.util.Set;

import javax.swing.JFrame;
import javax.swing.JScrollPane;
import javax.swing.JTextArea;

public class ServerChat extends JFrame{
	Socket socket = null;
	ServerSocket listener = null;
	private JTextArea serverTextArea = new JTextArea();
	private HashMap<String, BufferedWriter> clientMap = new HashMap<String, BufferedWriter>();

	public ServerChat() {
		setTitle("쨠좼");
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		add(new JScrollPane(serverTextArea));

		setSize(400, 500);
		setVisible(true);
		setResizable(false);

		connect();
	}

	public void connect() {
		try {
			listener = new ServerSocket(9999);
		} catch (IOException e) {
			e.printStackTrace();
		}
		while(true) {
			try {
				socket = listener.accept();
				ServerThread th = new ServerThread(socket);
				th.start();
			} catch (IOException e2) {
				e2.printStackTrace();
			}
		}
	}

	class ServerThread extends Thread {
		Socket socket;
		BufferedReader in = null;
		BufferedWriter out = null;
		String nickName;

		public ServerThread(Socket socket) {
			try {
				in = new BufferedReader(new InputStreamReader(socket.getInputStream()));
				out = new BufferedWriter(new OutputStreamWriter(socket.getOutputStream()));	
				nickName = in.readLine();
				serverTextArea.append(nickName + " 찗써 핑" + "\n");
				addClient(nickName, out);
			} catch (IOException e) {
				e.printStackTrace();
			}
		}

		@Override
		public void run() {
			try {
				while(true) {
					String inputMessage = in.readLine();
					serverTextArea.append("[" + nickName + "] : " + inputMessage + "\n");
					Set<String> s = clientMap.keySet();
					Iterator<String> it = s.iterator();
					String key;
					while (it.hasNext()) {
						key = it.next();
						try {
							if(key.equals(nickName))
								continue;
								//clientMap.get(key).write("");
							else {
								clientMap.get(key).write("[" + nickName + "] : " + inputMessage + "\n");
								clientMap.get(key).flush();
							}
						} catch (IOException e) {
							e.printStackTrace();
						}
					}
				}
			} catch (IOException e) {
				removeClient(nickName);
			}
		}

	}


	public void addClient(String nickName, BufferedWriter out) {
		clientMap.put(nickName, out);
		serverTextArea.append("[" + nickName + "]얪첇 첎천핖퍟챲핎." + "\n");
		Set<String> s = clientMap.keySet();
		Iterator<String> it = s.iterator();
		while (it.hasNext()) {
			String key = it.next();
			try {
				if(key.equals(nickName))
					continue;
					//clientMap.get(key).write("");
				else {
					clientMap.get(key).write("[" + nickName + "]얪첇 첎천핖퍟챲핎." + "\n");
					clientMap.get(key).flush();
				}
			} catch (IOException e) {
				e.printStackTrace();
			}
		}
	}
	public void removeClient(String nickName) {
		serverTextArea.append("[" + nickName + "]얪첇 쾛천핖퍟챲핎." + "\n");
		Set<String> s = clientMap.keySet();
		Iterator<String> it = s.iterator();
		while (it.hasNext()) {
			String key = it.next();
			try {
				if(key.equals(nickName))
					continue;
				clientMap.get(key).write("[" + nickName + "]얪첇 쾛천핖퍟챲핎." + "\n");
				clientMap.get(key).flush();
			} catch (IOException e) {
				e.printStackTrace();
			}
		}
		clientMap.remove(nickName);
	}

	public static void main(String[] args) {
		new ServerChat();
	}

}
